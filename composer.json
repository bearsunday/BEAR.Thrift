{
    "name": "bearsunday/thrift",
    "version": "0.1.0",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BEARSunday\\Thrift\\": "src"
        },
        "classmap": ["gen-php"]
    },
    "autoload-dev": {
        "psr-4": {
            "MyVendor\\MyApp\\": "tests/stub-resource/src"
        }
    },
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "apache/thrift": "^0.19.0",
        "doctrine/coding-standard": "^12.0",
        "squizlabs/php_codesniffer": "^3.5",
        "bear/resource": "^1.20",
        "bear/package": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "process-timeout":0
    },
    "scripts": {
        "build:all": ["@build:thrift", "@build:go", "@build:py", "@build:php"],
        "build:thrift": [
            "thrift -r --gen php:server ResourceService.thrift",
            "thrift -r --gen go -o client/go_client ResourceService.thrift",
            "thrift -r --gen py -o client/py_client ResourceService.thrift && mv client/py_client/gen-py client/py_client/gen_py"
        ],
        "build:go": "cd client/go_client && go build",
        "build:py": "cd client/py_client && python3 -m venv ./ && source ./bin/activate && ./bin/pip install thrift",
        "build:php": "composer update && cd tests/Fake/app && composer update",
        "serve": "php bin/serve.php",
        "run:go": "./client/go_client/go_client 127.0.0.1 9090 get \"app://self/add?a=1&b=2\"",
        "run:py2": "./client/py_client/bin/python3 ./client/py_client/main.py 127.0.0.1 9090 get \"app://self/add?a=1&b=3\"",
        "cs": ["phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["phpcbf src tests"]
    }
}
